@model Remedio

<div class="container">
    <h2>Detalhes do Remédio</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <img src="@Model.Imagem" alt="@Model.NomeComercial" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Principio Ativo:  @Model.PrincipioAtivo</h5>
                    <p class="card-text">Nome Comercial:  @Model.NomeComercial</p>
                    <p class="card-text">Dose: @Model.Dose</p>
                    <p class="card-text">Via Administração: @Model.ViaAdministracao</p>
                    <p class="card-text">@Model.ResumoBasico</p>
                    <p class="card-text">Indicação: @Model.Indicacao</p>
                    <p class="card-text">Contra Indicação: @Model.Contraindicacao</p>
                    <p class="card-text">Efeitos EfeitosAdversos: @Model.EfeitosAdversos</p>
                    @* InteraçõesFarmacologicas *@
                    <p class="card-text">Interações Farmacologicas: @Model.InteracoesFarmacologicas</p>

                    <span class="badge badge-secondary">Categoria Fármacologica @Model.CategoriaFarmacologica</span>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h4>Espécies</h4>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.SinaisClinicos[0].Sinal)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.SinaisClinicos) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Sinal)</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>

    </div>

    <div class="form-group">
        @Html.ActionLink("Editar", "Edit", new { id = Model.RemedioId }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary" })
    </div>

</div>
